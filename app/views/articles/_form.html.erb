<%= form_for @article, :html => {:class => ''} do |f| %>

    <input type="hidden" name="article[owner_id]" value="<%= current_user.id %>">

    <div class="form-group <%= "has-error".html_safe unless @article.errors[:title].blank? %>">
      <%= f.label 'Title *' %>
      <%= f.text_field :title, class: 'form-control border-input input-lg' %>
    </div>

    <div class="form-group <%= "has-error".html_safe unless @article.errors[:body].blank? %>">
      <%= f.label "Body *" %>
      <%= f.text_area :body, class: 'form-control border-input' %>
    </div>

    <div class="form-group <%= "has-error".html_safe unless @article.errors[:published_at].blank? %>">
      <%= f.label 'Publish no sooner than' %>
      <%= f.text_field :published_at, class: 'datepicker form-control border-input', placeholder: 'for example, ' + Date.today.strftime("%m/%d/%Y") %>
    </div>

    <div class="form-group <%= "has-error".html_safe unless @article.errors[:expired_at].blank? %>">
      <%= f.label 'Expire by' %>
      <%= f.text_field :expired_at, class: 'datepicker form-control border-input', placeholder: 'for example, ' + Date.tomorrow.strftime("%m/%d/%Y") %>
    </div>

    <%= f.submit "Save", class: "btn btn-success btn-fill btn-block" %>

    <p>&nbsp;</p>
    <p>&nbsp;</p>

<% end %>

