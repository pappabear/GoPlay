<% provide(:title, 'Edit Event Type') %>

<div class="row">

  <% if @event_type.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@event_type.errors.count, "error") %>.
        </div>
        <ul>
          <% @event_type.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
    <h4>New Event Type</h4>

    <%= render 'form' %>

    <br />
    <%= link_to 'Back', activity_event_types_path(@activity) %>

  </div>
</div>

