<% provide(:title, 'New Event') %>

<div class="row">

  <% if @event.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@event.errors.count, "error") %>.
        </div>
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4>New Event</h4>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <% if logged_in? %>
        <%= render 'form' %>
      <% else %>
        You must be a registered user to post announcements to the network.  It's free and easy to join!  C'mon, <a href='/signup'>join</a> us!
      <% end %>

    </div>
  </div>

</div>
</div>
</div>
