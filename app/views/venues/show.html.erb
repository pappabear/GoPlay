<div class="row">
  <div class="col-sm-4">
    <h1><%= @venue.name %></h1>

    <p>
      <%= @venue.formatted_address %>
    </p>

    <p>
      <%= @venue.phone %>
    </p>

  </div>


  <div class="col-sm-8">

    <style>
        #map-container {
            height: 400px;
            border-radius: 16px 16px;
            border-color: #fff;
            border-style: solid;
            box-shadow: 2px 2px 10px #B1B1B1;
            margin-top: 25px;
            border-width: 7px;
        }

        #map {
            height: 384px;
            width: 100%;
        }
    </style>

    <div id="map-container">
      <div id="map" style="height:100%;"></div>
    </div>

    <script>

        function initMap() {

            var myLatLng = {lat: <%= @venue.latitude %>, lng: <%= @venue.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                zoom: 16
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: "<%= @venue.name %>"
            });

        }


    </script>
    <script src="http://maps.googleapis.com/maps/api/js?callback=initMap" async defer>
    </script>

  </div>

</div>


<p>
  <%= link_to 'Edit this venue record', edit_venue_path(@venue) %>
</p>

<p>
  <%= link_to 'Back to the list of venues', venues_path %>
</p>
